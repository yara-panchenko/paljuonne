<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="paljuonepanchenko.MainPage">

    <StackLayout BackgroundColor="Aqua">
        
        <Label x:Name="maill" Text="" HorizontalOptions="Center" />
        <Label x:Name="num" Text="" HorizontalOptions="Center"/>
        <Label x:Name="choose" HorizontalOptions="CenterAndExpand" Text="Э-почта/Номер телефона"></Label>
        <Switch x:Name="type" IsToggled="false" HorizontalOptions="CenterAndExpand"/>
        <Button x:Name="btn" Text="Отправить поздравление!" />
        <Image Source="fon.jpg" HeightRequest="300" WidthRequest="300"/>
        <Picker x:Name="opiPicker" Title="Vali" />
    </StackLayout>

</ContentPage>
